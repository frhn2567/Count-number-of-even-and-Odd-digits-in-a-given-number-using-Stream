import java.util.stream.*;
import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    
	// ***not for zero counting
	
   long number=1234567;
   if(number<0)
     number=-number;
   Map<Boolean,Long> res= String.valueOf(number).chars().mapToObj(ch->(ch-'0'))
                .filter(n->n!=0)
                 .collect(Collectors.partitioningBy(n->n%2==0 ,Collectors.counting()));
                 
    System.out.println("Number of Even digits are : "+res.get(true));
    System.out.println("Nuber of Odd digits are : "+res.get(false));
      
    

	}
}
